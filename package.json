{
  "name": "above-framework",
  "version": "1.0.1",
  "description": "Framework with hapijsd",
  "main": "build/index.js",
  "typings": "build/typings/index.d.ts",
  "repository": "https://github.com/abovejs/framework",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different",
    "test:unit": "nyc --silent ava",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\"",
    "semantic-release": "semantic-release",
    "clean": "",
    "prepare:npm": ""
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "@hapi/hapi": "^18.3.1",
    "@hapi/inert": "^5.2.1",
    "@hapi/vision": "^5.5.2",
    "@types/hapi": "^18.0.2",
    "@types/hapi__inert": "^5.2.0",
    "@types/hapi__vision": "^5.5.0",
    "@types/joi": "^14.3.2",
    "abstract-logging": "^1.0.0",
    "boom": "^7.3.0",
    "bunyan": "^1.8.12",
    "bunyan-logstash-tcp": "^1.0.0",
    "dotenv": "^7.0.0",
    "hapi": "^18.1.0",
    "hapi-auth-jwt2": "^8.3.0",
    "hapi-swagger": "^9.4.2",
    "inert": "^5.1.2",
    "joi": "^14.3.1",
    "joi-extract-type": "^0.1.8",
    "klaw-sync": "^6.0.0",
    "vision": "^5.4.4",
    "youch": "^2.0.10",
    "youch-terminal": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@types/boom": "^7.2.1",
    "@types/bunyan": "^1.8.6",
    "@types/dotenv": "^6.1.0",
    "@types/hapi-auth-jwt2": "^8.0.2",
    "@types/inert": "^5.1.2",
    "@types/klaw-sync": "^6.0.0",
    "@types/node": "^11.11.7",
    "@types/vision": "^5.3.6",
    "ava": "^1.4.0",
    "codecov": "^3.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "opn-cli": "^4.0.0",
    "prettier": "^1.16.4",
    "semantic-release": "^15.13.3",
    "trash-cli": "^1.4.0",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^5.5.2",
    "typescript": "^3.3.4000"
  },
  "ava": {
    "failFast": true,
    "files": [
      "build/**/*.spec.js"
    ],
    "sources": [
      "build/**/*.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "yarn.lock",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
